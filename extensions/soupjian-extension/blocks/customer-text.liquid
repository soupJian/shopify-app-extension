{%- liquid
  assign text = block.settings.text | default: 'Default Text'
  assign text_color = block.settings.text_color | default: '#000000'
-%}
<section class="custom-text-section" style="color: {{ text_color }}">
  <div class="section-content">
    {{ text }}
  </div>
</section>

{% schema %}
  {
    "name": "Custom Text Section",
    "target": "section",
    "class": "custom-text-section",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "label": "Text Content",
        "default": "Type your custom text here"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#000000"
      }
    ]
  }
{% endschema %}